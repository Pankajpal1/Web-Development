<% layout("layouts/boilerplate.ejs") %>
<!-- All this code is passed to boilerplate as "body" -->
    <h1 class="my-4">All Campgrounds!</h1>

      <% for(let campground of allCamps) { %>
        <div class="card">
          <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" src="<%= campground.image %>" alt="">
            <!-- it's giving the same image for every card, deal with that later-->
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
              <p class="text-secondary"><%= campground.location %></p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
            </div>
          </div>
          </div>
        </div>
      <% } %>
