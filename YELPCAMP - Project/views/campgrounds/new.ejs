<% layout("layouts/boilerplate.ejs") %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="title">Name</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <!-- When our data is sent via post request, everything in req.body is stored in
              a campground object -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required 
        />
      </div>

      <div class="mb-3">
        <label for="img" class="form-label">Image URL</label>
        <input
          class="form-control"
          type="url"
          id="img"
          name="campground[image]"
          id="img"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="description"
          name="campground[description]"
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="text"
            id="price"
            placeholder="0.00"
            class="form-control"
            name="campground[price]"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success" type="submit">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">Cancel</a>
  </div>
</div>
